<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!-- =====================top menu bar ======================== -->
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Điện thoại hot</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand"><a href="#" class="btn btn-info btn-lg">
          <span class="glyphicon glyphicon-home"></span></a>
        </button></a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <!-- ======================Hang san xuat =================== -->
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Hãng sản xuất <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <!-- load cac hang san xuat trong csdl len dropdown -->
                <%@hangsanxuats.each do |hangsanxuat|%>
                <li><%= link_to hangsanxuat.ten, change_sanpham_hangsanxuat_path(:hsx=> hangsanxuat.id), :method=> :post, :remote => true %></Action></li>
                <%end%>
              </ul>
            </li>
            <!-- ==================== Gia san pham ================== -->
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Gía bán <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Dưới 3 triệu", change_sanpham_giaban_path(:giaban=> 1), :method=> :post, :remote => true %></Action></li>
                <li><%= link_to "3 triệu đến 5 triệu", change_sanpham_giaban_path(:giaban=> 2), :method=> :post, :remote => true %></Action></li>
                <li><%= link_to "5 triệu đến 7 triệu", change_sanpham_giaban_path(:giaban=> 3), :method=> :post, :remote => true %></Action></li>
                <li><%= link_to "7 triệu đến 10 triệu", change_sanpham_giaban_path(:giaban=> 4), :method=> :post, :remote => true %></Action></li>
                <li><%= link_to "Trên 10 triệu", change_sanpham_giaban_path(:giaban=> 5), :method=> :post, :remote => true %></Action></li>
              </ul>
            </li>
            <!-- =================== He dieu hanh ==================== -->
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Hệ điều hành <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <%@hedieuhanhs.each do |hdh|%>
                <li><%= link_to hdh.ten, change_sanpham_hedieuhanh_path(:hedieuhanh=> hdh.id), :method=> :post, :remote => true %></Action></li>
                <%end%>
              </ul>
            </li>
            <li><a href="#about">Thông tin website</a></li>
          </ul>
          <form class="navbar-form navbar-right">
            <div class="form-group">
              <input type="text" id = "keyword" class="form-controller"></input>
            </div>
            <button id = "byname" class="btn btn-success search" type="submit"><span class="glyphicon glyphicon-search" aria-hidden="true"></span><%=link_to "Search", change_sanpham_ten_path(), :method=> :post, :remote => true %></button>
          </form>
        </div>
        <!--/.nav-collapse -->
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
    <!-- footer -->
    <div class="navbar navbar-default">
      <footer class="footer">
        <div class="container">
          <p class="text-muted text-center">&copy; Designed by Nguyen Thanh Tien 2014</p>
        </div>
      </footer>
    </div>
  </body>
  <script></script>
</html>
